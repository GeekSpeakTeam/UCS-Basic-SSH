# SSH to Multiple Devices from devices file
from netmiko import ConnectHandler
import re
with open('devices.txt') as routers:
    for IP in routers:
        Router = {
            'device_type': 'cisco_ios',
            'ip': IP,
            'username': 'xxx',
            'password': 'xxx'
}
# Next establish the SSH connection
for devices in Router:
        net_connect = ConnectHandler(**Router)

#Discover the hostname from the prompt

hostname = net_connect.send_command("show run | i ^hostname")
hostname.split(" ")
hostname,device = hostname.split(" ")
print ("Backing up " + device)

#filename = '/home/guestshell/backups/' + device + '.txt'
# to save backup to same folder as script use below line and comment out above line
filename = device + '.txt'

showrun = net_connect.send_command('show run')
showvlan = net_connect.send_command('show vlan')
showver = net_connect.send_command('show ver')
log_file = open(filename, "a")   # in append mode
log_file.write(showrun)
log_file.write("\n")
log_file.write(showvlan)
log_file.write("\n")
log_file.write(showver)
log_file.write("\n")

# Finally close the connection
net_connect.disconnect()
